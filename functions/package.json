{
  "name": "mapies-functions",
  "description": "Cloud Functions for Mapies - Stripe Webhook Handler",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "crypto": "^1.0.1",
    "csv-parse": "^6.1.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.1.0",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
