rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload folder icons
    match /folder-icons/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read any folder icons (for map display)
    match /folder-icons/{userId}/{fileName} {
      allow read: if request.auth != null;
    }
  }
}






